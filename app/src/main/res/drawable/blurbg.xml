<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Shadow -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#8C000000"/> <!-- Adjust alpha and color as needed -->
                <corners android:radius="20dp"/> <!-- Adjust radius as needed -->
            </shape>
        </item>

        <!-- Rounded Rectangle -->
        <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/> <!-- Adjust color as needed -->
                <corners android:radius="20dp"/> <!-- Adjust radius as needed -->
            </shape>
        </item>

    </layer-list>

</selector>