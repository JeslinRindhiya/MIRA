<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".findmydoc"
    android:background="@drawable/newbg">

    <LinearLayout
        android:id="@+id/block1"
        android:layout_width="385dp"
        android:layout_height="109dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="562dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintVertical_bias="0.684">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="109dp"
            android:layout_marginLeft="-3dp"
            android:background="@drawable/dam1">

            <TextView
                android:layout_width="157dp"
                android:layout_height="31dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="75dp"
                android:text="ALIYAR"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-100dp"
            android:text="Current Capacity 1550M.cft"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="230dp"
            android:textSize="12dp"
            android:text="MAX Capacity 3864M.cft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="The Aliyar Dam is built across the Aliyar River, a tributary of the Parambikulam River. The Parambikulam River eventually flows into the Arabian Sea."
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block2"
        android:layout_width="385dp"
        android:layout_height="109dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="431dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/block1">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="109dp"
            android:layout_marginLeft="-4dp"
            android:src="@drawable/dam2" />

        <TextView
            android:layout_width="157dp"
            android:layout_height="31dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-37dp"
            android:text="BHAVANI"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="-100dp"
            android:text="Current Capacity 15417M.cft"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="220dp"
            android:textSize="12dp"
            android:text="MAX Capacity 32800M.cft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Bhavani Dam spans the Bhavani River, a Kaveri tributary. The Kaveri River flows through Karnataka and Tamil Nadu to the Bay of Bengal."
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block3"
        android:layout_width="385dp"
        android:layout_height="109dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="306dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/block1">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="109dp"
            android:layout_marginLeft="-4dp"
            android:src="@drawable/dam3" />

        <TextView
            android:layout_width="157dp"
            android:layout_height="31dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="-37dp"
            android:text="AMARAVATHI"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-100dp"
            android:text="Current Capacity 3801M.cft"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="230dp"
            android:textSize="12dp"
            android:text="MAX Capacity 4047M.cft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="The Amaravathi Dam is built across the Amaravathi River, which is a tributary of the Kaveri River. The Kaveri River flows through the southern states of Karnataka and Tamil Nadu in India, eventually reaching the Bay of Bengal."
            android:textColor="@color/black"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/block4"
        android:layout_width="385dp"
        android:layout_height="109dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="187dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/block1">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="109dp"
            android:layout_marginLeft="-4dp"
            android:src="@drawable/dam4" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-37dp"
            android:text="SOZHAIYAAR"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-100dp"
            android:text="Current Capacity 	73.5M.cft"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="230dp"
            android:textSize="12dp"
            android:text="MAX Capacity 5046M.cft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="The Sholayar Dam is built across the Chalakkudy River. The Chalakkudy River flows through the Thrissur District in Kerala and eventually empties into the Arabian Sea."
            android:textColor="@color/black"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/art_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/white"
        android:text="BACK"
        android:textColor="@color/white"
        app:backgroundTint="#272727"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/findmydoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findmydoc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"

        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView

            android:id="@+id/Physician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/dentist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/dietition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/cardiologist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/surgeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView

        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="12dp"
        android:text="DAMS"
        android:textAlignment="center"
        android:textColor="@color/gwhite"
        android:textSize="35sp"
        android:textStyle="bold"
        app:fontFamily="@font/architects_daughter" />

    <ImageView
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="231dp"
        android:src="@drawable/test"
        android:tint="@color/white" />


</RelativeLayout>